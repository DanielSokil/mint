component Test {
  fun something (string : String) : String {
    string
  }

  fun render : Html {
    <div/>
  }
}

component Main {
  fun handleClick : Maybe(String) {
    test&.something&("asd")
  }

  fun render : Html {
    <div onClick={handleClick}>
      <Test as test/>
    </div>
  }
}
--------------------------------------------------------------------------------
enum Maybe(value) {
  Just(value)
  Nothing
}

component Test {
  fun something (string : String) : String {
    string
  }

  fun render : Html {
    <div/>
  }
}

component Main {
  fun handleClick : String {
    case (test) {
      Maybe::Just component => component.something("asd")
      Maybe::Nothing => "asd"
    }
  }

  fun render : Html {
    <div onClick={handleClick}>
      <Test as test/>
    </div>
  }
}
--------------------------------------------------------------------------------
enum Maybe(value) {
  Just(value)
  Nothing
}

component Test {
  fun something (string : String) : String {
    string
  }

  fun render : Html {
    <div/>
  }
}

component Main {
  fun handleClick : String {
    case (test) {
      Maybe::Just component => handleComponent(component)
      Maybe::Nothing => "asd"
    }
  }

  fun handleComponent (component : Test) : String {
    component.something("asd")
  }

  fun render : Html {
    <div onClick={handleClick}>
      <Test as test/>
    </div>
  }
}
-------------------------------------------------------------AccessFieldNotFound
component Test {
  fun render : Html {
    <div/>
  }
}

component Main {
  fun handleClick : String {
    test&.something&()
  }

  fun render : Html {
    <div onClick={handleClick}>
      <Test as test/>
    </div>
  }
}
----------------------------------------------------------------CallNotAFunction
component Test {
  state something : String = ""

  fun render : Html {
    <div/>
  }
}

component Main {
  fun handleClick : String {
    test&.something&("asd")
  }

  fun render : Html {
    <div onClick={handleClick}>
      <Test as test/>
    </div>
  }
}
--------------------------------------------------------CallArgumentTypeMismatch
component Test {
  fun something (string : String): String  {
    string
  }

  fun render : Html {
    <div/>
  }
}

component Main {
  fun handleClick : String {
    test&.something&(0)
  }

  fun render : Html {
    <div onClick={handleClick}>
      <Test as test/>
    </div>
  }
}
--------------------------------------------------------CallArgumentSizeMismatch
component Test {
  fun something (string : String): String  {
    string
  }

  fun render : Html {
    <div/>
  }
}

component Main {
  fun handleClick : String {
    test&.something&("asd", "asd")
  }

  fun render : Html {
    <div onClick={handleClick}>
      <Test as test/>
    </div>
  }
}
